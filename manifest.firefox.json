{
  "manifest_version": 3,
  "name": "ClauseGuard",
  "short_name": "ClauseGuard",
  "description": "Your Personal Legal Shield for the Internet - AI-powered Terms of Service analyzer that explains policies in plain English",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ClauseGuard - Analyze this site"
  },
  "background": {
    "scripts": ["src/background/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/scraper.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clauseguard@example.com",
      "strict_min_version": "109.0"
    }
  }
}
